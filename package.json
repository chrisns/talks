{
  "name": "talks",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "type": "module",
  "scripts": {
    "lint": "prettier --check .",
    "build": "run-s build:*",
    "build:css": "postcss themes --ext css -d themes --no-map",
    "build:html": "marp",
    "build:pptx": "marp --pptx",
    "build:image": "marp --image",
    "build:notes": "marp --notes",
    "build:pdf": "marp --pdf --pdf-notes && ./compress_pdfs.sh",
    "build:images": "cp -vr images dist/",
    "build:indexhtml": "node generate_index.js > dist/index.html",
    "start": "run-p server:*",
    "server:postcss": "postcss --watch --ext css -d themes themes",
    "server:marp": "marp -s"
  },
  "author": "Chris Nesbitt-Smith",
  "license": "MIT",
  "postcss": {
    "map": false
  },
  "dependencies": {
    "@marp-team/marp-cli": "^2.0.0",
    "marked": "^4.1.1",
    "npm-run-all": "4.1.5",
    "postcss-cli": "10.0.0",
    "postcss-discard-comments": "^5.0.3",
    "postcss-for": "^2.1.1",
    "postcss-import": "^15.0.0",
    "postcss-nested": "^6.0.0",
    "postcss-use": "^3.0.0",
    "prettier": "2.7.1"
  }
}
