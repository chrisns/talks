{
  "name": "talks",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "type": "module",
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "lint": "prettier --check .",
    "build": "postcss themes --ext css -d themes --no-map && marp && marp --pptx && marp --pdf --pdf-notes && marp --image && marp --notes && cp -vr images dist/ && node generate_index.js > dist/index.html",
    "start": "run-p postcss-watch marp-server",
    "postcss": "postcss --ext css -d themes themes",
    "postcss-watch": "postcss --watch --ext css -d themes themes",
    "marp-server": "marp -s"
  },
  "author": "Chris Nesbitt-Smith",
  "license": "MIT",
  "postcss": {
    "map": false
  },
  "dependencies": {
    "@marp-team/marp-cli": "^1.7.0",
    "postcss-discard-comments": "^5.0.3",
    "postcss-for": "^2.1.1",
    "postcss-nested": "^5.0.6",
    "postcss-use": "^3.0.0"
  },
  "devDependencies": {
    "npm-run-all": "4.1.5",
    "postcss-cli": "9.1.0",
    "prettier": "2.6.2"
  }
}
